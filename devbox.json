{
  "packages": [
    "jdk@11",
    "maven@3.9.1",
    "asciidoctor-with-extensions@2.0.23",
    "ruby@3.4.4",
    "mermaid-cli@11.6.0",
    "graphviz@12.2.1"
  ],
  "shell": {
    "init_hook": [
      "echo \"source 'https://rubygems.org'\ngem 'asciidoctor-diagram'\" > Gemfile",
      "bundle config --local path .bundle/gems",
      "bundle install"
    ],
    "scripts": {
      "test": [
        "mvn test"
      ],
      "adoc2html": "bundle exec asciidoctor -r asciidoctor-diagram *.adoc"
    }
  }
}